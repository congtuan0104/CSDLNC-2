<div class="mt-1">
    <div class="container">
        <div class="row">
            <div class="col-sm-1 col-md-3"></div>
            <div class="col-sm-10 col-md-6">
                <form method="get" action="/updateProfile" class="pt-5 pb-5 pl-5 pr-5">
                    {{#each user}}
                    <h3 class="text-primary">CHỈNH SỬA THÔNG TIN</h3>

                    <div class="form-group text-left">
                        <label for="name">Họ tên</label>
                        <input type="text" class="form-control" id="name" name="name" aria-describedby="name"
                            value="{{this.TenKH}}" required>
                    </div>

                    <div class="form-group text-left">
                        <label for="name">Địa chỉ</label>
                        <input type="text" class="form-control" id="address" name="address" aria-describedby="address"
                            value="{{this.DiaChi}}" required>
                    </div>

                    <div class="form-group text-left">
                        <label for="exampleInputEmail1">Số điện thoại</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" name="phone"
                            aria-describedby="emailHelp" value="{{this.SDT}}" required pattern="0[0-9]{9}">
                    </div>

                    <div class="form-group text-left">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" name="email" aria-describedby="email"
                            required value="{{this.Email}}">
                    </div>



                    <button type="submit" class="btn btn-primary">Cập nhật thông tin</button>

                    {{/each}}
                </form>
            </div>
            <div class="col-sm-1 col-md-3"></div>
        </div>
    </div>
</div>