
<div class="mt-4">
    <div class="container">
        <div class="row">
            {{#each products}}
            <div class="col-sm-6 col-lg-3 mt-4">
                <div class="card h-100 border-2 border-danger">
                    <a href="/products/{{this.MaSP}}">
                        <img src="/img/product-mix3.png" class="card-img-top" alt="Hình minh hoạ">
                    </a>
                    <div class="card-body">
                        <a class="text-decoration-none" href="/products/{{this.MaSP}}">
                            <h5 class="card-title text-left text-primary">{{this.TenSP}}</h5>
                        </a>

                        <h6 class="card-text text-left text-danger "><b class="money">{{this.GiaBan}}đ</b></h6>
                    </div>
                    <div class="card-footer">
                        <a href="#" class="btn btn-lg btn-danger btn-block" role="button" aria-pressed="true">CHỌN
                            MUA</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>