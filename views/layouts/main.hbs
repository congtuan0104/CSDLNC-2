        <div class="row" id="top">
            <div class="col-md" style="padding:0;">
                {{>(navP)}}
            </div>
        </div>

        <div class="row py-2" style="border-top:1px solid grey">
            <div class="col-md-12 text-center" style="min-height:400px;">
                {{{body}}}
            </div>

        </div>

        <div class="row">
            <div class="col-md">
                {{>(footerP)}}
            </div>
        </div>

    </div>

    {{>(scriptP)}}
    
